//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "UnitSnake.h"
#include "UnitMenu.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TFormSnake *FormSnake;
//---------------------------------------------------------------------------
int FieldsPosition = 120;
int N = 8, M = 8;
int size = 70;
int w = size * N;
int h = size * M;
int start_game, dir, num = 1;
int Speed = 500;
TImage* t[8][8];
TImage* coin;  
struct Snake
{
 int x, y;
} s[70];

struct Fruit
{
 int x, y;
} f;

void EraseTheSnake();
void draw();
void Tick();

__fastcall TFormSnake::TFormSnake(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TFormSnake::ImageCloseSnakeClick(TObject *Sender)
{
 EraseTheSnake();
 num = 0;
 coin->Visible=false;
 start_game =0;
 FormMainMenu->Visible=True;
 Close();
}
//---------------------------------------------------------------------------
void __fastcall TFormSnake::Image1Click(TObject *Sender)
{
 FormSnake->Timer1->Interval = Speed;
 num=1;
 s[0].x = rand() % N;
 s[0].y = rand() % M;
 f.x = rand() % N;
 f.y = rand() % M;
 coin->Position->X=FieldsPosition+(f.x)*size;
 coin->Position->Y=FieldsPosition+(f.y)*size;
 start_game=1;
 coin->Visible=true;
}
//---------------------------------------------------------------------------

void AppleLoading()
{
 coin = new TImage (FormSnake);
 coin->Visible=false;
 coin->Bitmap->LoadFromFile("../../Photo/snake/coin.png");
 coin->Width=size;
 coin->Height=size;
 coin->Parent = FormSnake;
}

void SnakeLoading()
{
 for (int i=0; i<N; i++)
	for (int j=0; j<M; j++)
	{
	 t[i][j]= new TImage (FormSnake);
	 t[i][j]->Visible=false;
	 t[i][j]->Bitmap->LoadFromFile("../../Photo/snake/telo3.png");
	 t[i][j]->Position->X=FieldsPosition+(i)*size;
	 t[i][j]->Position->Y=FieldsPosition+(j)*size;
	 t[i][j]->Width=size;
	 t[i][j]->Height=size;
	 t[i][j]->Parent = FormSnake;
	}
}


void __fastcall TFormSnake::FormCreate(TObject *Sender)
{
 start_game =0;
 AppleLoading();
 SnakeLoading();
}
//---------------------------------------------------------------------------

int IsAppleInSnake()
{
 for (int i = 0; i < num; i++)
	if (s[i].x == f.x && s[i].y == f.y)
	{
	 return 1;
	}
 return 0;
}

void NewShift()
{
	switch (dir)
	{
	 case 0:
		s[0].y += 1;
		break;
	 case 1:
		s[0].x -= 1;
		break;
	 case 2:
		s[0].x += 1;
		break;
	 case 3:
		s[0].y -= 1;
	 }
}

void EatTheApple()
{
 if ((s[0].x == f.x) && (s[0].y == f.y))
	{
	 num++;
		while (IsAppleInSnake())
		{
		 f.x = rand() % N;
		 f.y = rand() % M;
		}
	 if(FormSnake->Timer1->Interval > 100)
	 {
	 FormSnake->Timer1->Interval -=25;
	 }
	 coin->Position->X=FieldsPosition+(f.x)*size;
	 coin->Position->Y=FieldsPosition+(f.y)*size;
	}
}

void DirectionIntoWall()
{
 if (s[0].x > N-1) s[0].x = 0;
 if (s[0].x < 0) s[0].x = N-1;
 if (s[0].y > M-1) s[0].y = 0;
 if (s[0].y < 0) s[0].y = M-1;
}

void DeathCheck()
{
	for (int i = 1; i < num; i++)
	 if (s[0].x == s[i].x && s[0].y == s[i].y)
	 {
	  num = 0;
	  coin->Visible=false;
	  start_game = 0;
	 }
}

void BodyShift()
{
	for (int i = num; i > 0; --i)
	{
	 s[i].x = s[i - 1].x;
	 s[i].y = s[i - 1].y;
	}
}

void Tick()
{
 BodyShift();
 NewShift();
 DirectionIntoWall();
 EatTheApple();
 DeathCheck();
}

void EraseTheSnake()
{
	for (int i=0; i<N; i++)
	{
	  for (int j=0; j<M; j++)
	  {
	   t[i][j]->Visible=false;
	  }
	}
}

void draw()
{
 EraseTheSnake();
	for (int i=0;i<num;i++)
	{
	 int x_1,y_1;
	 x_1= s[i].x;
	 y_1= s[i].y;
	 t[x_1][y_1]->Visible=true;
	}
}

void __fastcall TFormSnake::Timer1Timer(TObject *Sender)
{
	if (start_game == 1)
	{
	 Tick();
	 draw();
	}
}
//---------------------------------------------------------------------------

void __fastcall TFormSnake::FormKeyUp(TObject *Sender, WORD &Key, System::WideChar &KeyChar,
          TShiftState Shift)
{
	switch (Key)
	{
	 case vkLeft:
		dir = 1;
		break;
	 case vkRight:
		dir = 2;
		break;
	 case vkUp:
		dir = 3;
		break;
	 case vkDown:
		dir = 0;
	 }
}
//---------------------------------------------------------------------------


//---------------------------------------------------------------------------

