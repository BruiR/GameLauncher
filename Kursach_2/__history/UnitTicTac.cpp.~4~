void __fastcall TFormTicTac::FormCreate(TObject *Sender)
{
 Im1->Bitmap = NULL;
 Im2->Bitmap = NULL;
 Im3->Bitmap = NULL;
 Im4->Bitmap = NULL;
 Im5->Bitmap = NULL;
 Im6->Bitmap = NULL;
 Im7->Bitmap = NULL;
 Im8->Bitmap = NULL;
 Im9->Bitmap = NULL;
 srand ( time(NULL) );
 Play = rand()%2 + 1;
  if (Play == 1)
  {
	FormTicTac->ImageNext->Bitmap->LoadFromFile("../../Photo/iks.png");
  }
	else
	{FormTicTac->ImageNext->Bitmap->LoadFromFile("..//..//Photo//zero.png");}

 for (int i = 1; i < 4; i++)
 {
	for (int j = 1; j < 4; j++)
	{
		field[i][j]=0;
	}
 }
}
